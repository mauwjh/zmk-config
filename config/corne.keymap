#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

/ {
        keymap {
                compatible = "zmk,keymap";

                default_layer {
// -----------------------------------------------------------------------------------------
// |  Q  |  W  |  E  |  R  |  T  |   |  Y  |  U   |  I  |  O  |  P  |
// |  A  |  S  |  D  |  F  |  G  |   |  H  |  J   |  K  |  L  |  ;  |
// |  Z  |  X  |  C  |  V  |  B  |   |  N  |  M   |  ,  |  .  |  /  |
//                    | TAB | LWR | SPC |   | ENT | RSE  | BSPC |
                        bindings = <
   &kp Q &kp W &kp E &kp R &kp T   &kp Y &kp U  &kp I     &kp O   &kp P
   &mt LGUI A &mt LSHFT S &mt LALT D &mt LCTRL F &kp G   &kp H &mt RCTRL J  &mt RALT K     &mt RSHFT L   &mt RGUI SEMI
   &kp Z &kp X &kp C &kp V &kp B   &kp N &kp M  &kp COMMA &kp DOT &kp FSLH
                  &kp TAB &mo 1 &kp SPACE   &kp RET &mo 2 &kp BSPC
                        >;
                };
                lower_layer {
// -----------------------------------------------------------------------------------------
// |  1  |  2  |  3  |  4  |  5  |   |  6  |  7  |  8  |  9  |  0  |
// | BT1 | BT2 | BT3 | BT4 | BT5 |   | LFT | DWN |  UP | RGT |     |
// |     |     |     |     |     |   |     |     |     |     |     |
//                    | TAB |     | SPC |   | ENT |     | BSPC |
                        bindings = <
   &kp N1       &kp N2       &kp N3       &kp N4       &kp N5         &kp N6   &kp N7   &kp N8 &kp N9    &kp N0
   &mt LGUI BT_SEL 0 &mt LSHFT BT_SEL 1 &mt LALT BT_SEL 2 &mt LCTRL BT_SEL 3 &bt BT_SEL 4   &kp LEFT &mt RCTRL DOWN &mt RALT UP &mt RSHFT RIGHT &mt RGUI SEMI
   &trans       &trans       &trans       &trans       &trans         &trans   &trans   &trans &trans    &trans
                          	        &kp TAB     &trans       &kp SPACE      &kp RET  &trans   &kp BSPC
                        >;
                };

                raise_layer {
// -----------------------------------------------------------------------------------------
// |  !  |  @  |  #  |  $  |  %  |   |  ^  |  &  |  *  |  (  |  )  |
// |     |     |     |  "  |  `  |   |  -  |  =  |  [  |  ]  |  \  |
// |     |     |     |  '  |  ~  |   |  _  |  +  |  {  |  }  | "|" |
//                    | GUI |     | SPC |   | ENT |     | ALT |
                        bindings = <
   &kp EXCL &kp AT &kp HASH &kp DLLR &kp PRCNT   &kp CARET &kp AMPS  &kp KP_MULTIPLY &kp LPAR &kp RPAR
   &mt LGUI A   &mt LSHFT S &mt LALT D   &mt LCTRL DQT   &GRAVE      &kp MINUS &mt RCTRL EQUAL &mt RALT LBKT        &mt RSHFT RBKT &mt RGUI BSLH
   &trans   &trans &trans   &SQT   &TILDE      &kp UNDER &kp PLUS  &kp LBRC        &kp RBRC &kp PIPE
                    	     &kp TAB     &trans       &kp SPACE      &kp RET  &trans   &kp BSPC
                        >;
                };
        };
};
